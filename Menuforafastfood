#include <stdio.h>

int main()
{
    printf("Choose any of the following:\n1. Pizza, Rs 239 \n2. Burger, Rs 129 \n3. Pasta, Rs 179 \n4. French Fries, Rs 99 \n5. Sandwich, Rs 149");
    int x = 0;
    scanf("%d",&x);
    switch (x) { 
        case 1: 
        printf("Pizza - Rs 239/-"); 
        break; 
        
        case 2: 
        printf("Burger - Rs 129/-"); 
        break; 
        
        case 3: 
        printf("Pasta - Rs 179/-"); 
        break; 
        
        case 4:
        printf("French Fries - Rs 99/-");
        break;
        
        case 5:
        printf("Sandwich - Rs 149/-");
        break;
        
        default: 
        printf("We dont have that here no i mean it we dont but who knows maybe we do"); 
        
    } 
    return 0;
}
